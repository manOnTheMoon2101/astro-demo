---
import hero from "../assets/images/hero.png";
import { Trophy } from "@lucide/astro";
import { Users } from "@lucide/astro";
import { Zap } from "@lucide/astro";
import { Globe } from "@lucide/astro";
---

<div
  class="h-screen bg-cover bg-center bg-no-repeat flex items-center justify-center relative"
  style={`background-image: url(${hero.src})`}
>
  <div class="absolute inset-0 bg-[#0C1424]/80 z-0"></div>
  <div
    class="text-white flex flex-col text-center justify-center relative z-10"
  >
    <h2 class="text-6xl font-bold">
      Tembeza: Revolutionize your<br />Technology, exceed your goals
    </h2>

    <span class="my-4 text-gray-200"
      >Innovation,Development and Support for an Efficent Future</span
    >

    <button class="bg-[#C4062A] p-4 rounded-full self-center px-12"
      >Discover Now</button
    >
  </div>

  <div
    class="flex flex-row justify-between absolute bottom-0 left-0 right-0 transform translate-y-1/2 px-8 gap-4 my-8 z-10"
  >
    <div
      class="bg-[#0C1424] w-full h-16 flex flex-col items-center justify-center rounded-lg shadow-lg py-24"
    >
      <span class="p-4 my-2 rounded bg-[#C4062A]"
        ><Trophy class="text-white" /></span
      >

      <h3 class="text-4xl font-bold">100% Experience</h3>

      <span>5 years of service</span>
    </div>

    <div
      class="bg-[#0C1424] w-full h-16 flex flex-col items-center justify-center rounded-lg shadow-lg py-24"
    >
      <span class="p-4 my-2 rounded bg-[#C4062A]"><Users /></span>
      <h3 class="text-4xl">Digital Solutions</h3>
      <span>Technological Development</span>
    </div>

    <div
      class="bg-[#0C1424] w-full h-16 flex flex-col items-center justify-center rounded-lg shadow-lg py-24"
    >
      <span class="p-4 my-2 rounded bg-[#C4062A]"><Zap /></span>
      <h3 class="text-4xl font-bold">Maintenace</h3>
      <span>Specialized Support</span>
    </div>

    <div
      class="bg-[#0C1424] w-full h-16 flex flex-col items-center justify-center rounded-lg shadow-lg py-24"
    >
      <span class="p-4 my-2 rounded bg-[#C4062A]"> <Globe /></span>
      <h3 class="text-4xl font-bold">Confidentiality</h3>
      <span>Secure Data</span>
    </div>
  </div>
</div>

