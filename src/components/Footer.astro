---
import logo from "../assets/images/logo.png";
import { Mail } from "@lucide/astro";
---

<footer class="text-white">
  <div class="flex flex-col justify-center items-center">
    <div class="flex flex-row my-6">
      <img alt="Company Logo" src={logo.src} />
      <div class="ml-2 flex flex-col">
        <span class="font-bold text-2xl">Tembeza</span>
        <span class="text-sm">International</span>
      </div>
    </div>

    <ul class="flex flex-row items-center">
      <li class="mx-2">Home</li>
      <li class="mx-2">About</li>
      <li class="mx-2">Services</li>
      <li class="mx-2">Why us</li>
      <li class="mx-2">FAQ's</li>
    </ul>

    <div class="border rounded-full p-2 my-6 flex flex-row items-center">
      <span class="p-2 mr-2 rounded-full bg-[#C4062A]"><Mail /></span> clevejohnclaton.2101@gmail.com
    </div>
  </div>

  <div class="mx-6 flex flex-row justify-around">
    <div>
      <ul class="flex flex-row">
        <li>Copyright</li>
        <li>Tembeza International</li>
        <li>All Rights Reserved</li>
      </ul>
    </div>

    <div>
      <ul class="flex flex-row">
        <li>Privacy Policy</li>
        <li>Terms of Service</li>
        <li>Cookie Policy</li>
      </ul>
    </div>
  </div>
</footer>
