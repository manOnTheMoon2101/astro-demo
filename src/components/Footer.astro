---
import logo from "../assets/images/logo.webp";
import { Mail } from "@lucide/astro";
---

<footer class="text-white px-4">
  <div class="flex flex-col justify-center items-center my-12">
    <div class="flex flex-row my-6">
      <img alt="Company Logo" src={logo.src} class="w-8 h-8 md:w-auto md:h-auto" />
      <div class="ml-2 flex flex-col">
        <span class="font-bold text-xl md:text-2xl">Tembeza</span>
        <span class="text-xs md:text-sm">International</span>
      </div>
    </div>

    <ul class="flex flex-wrap justify-center items-center gap-2 md:gap-4">
      <li class="mx-1 md:mx-2 text-sm md:text-base">Home</li>
      <li class="mx-1 md:mx-2 text-sm md:text-base">About</li>
      <li class="mx-1 md:mx-2 text-sm md:text-base">Services</li>
      <li class="mx-1 md:mx-2 text-sm md:text-base">Why us</li>
      <li class="mx-1 md:mx-2 text-sm md:text-base">FAQ's</li>
    </ul>

    <div class="border rounded-full p-2 my-6 flex flex-row items-center text-center">
      <span class="p-2 mb-2 mr-2 rounded-full bg-[#C4062A]"><Mail  /></span> 
      <span class="text-xs md:text-sm break-all">clevejohnclaton.2101@gmail.com</span>
    </div>
  </div>

  <div class="mx-4 md:mx-6 flex flex-col md:flex-row justify-around bg-gray-200/20 p-4 my-12 gap-4 rounded-lg">
    <div>
      <ul class="flex flex-col md:flex-row gap-2 md:gap-4 text-center md:text-left">
        <li class="text-xs md:text-sm">Copyright</li>
        <li class="text-xs md:text-sm">Tembeza International</li>
        <li class="text-xs md:text-sm">All Rights Reserved</li>
      </ul>
    </div>

    <div>
      <ul class="flex flex-col md:flex-row gap-2 md:gap-4 text-center md:text-left">
        <li class="text-xs md:text-sm">Privacy Policy</li>
        <li class="text-xs md:text-sm">Terms of Service</li>
        <li class="text-xs md:text-sm">Cookie Policy</li>
      </ul>
    </div>
  </div>
</footer>
