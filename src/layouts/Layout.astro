---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import "@fontsource/nunito";
import "@fontsource/nunito-sans";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Tembeza International - Technology Solutions</title>
    <meta name="description" content="Tembeza International offers expert technology consulting, custom development, and reliable maintenance services." />
    <link rel="preload" href="/fonts/nunito-sans-latin-400-normal.woff2" as="font" type="font/woff2" crossorigin />
  </head>
  <body class="bg-[#0C1424] text-white">
    <slot />
  </body>

  <Footer />
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  h2 {
    font-family: "Nunito", sans-serif;
  }
   h3 {
    font-family: "Nunito", sans-serif;
  }
  p {
    font-family: "Nunito Sans", sans-serif;
  }

  span {
    font-family: "Nunito Sans", sans-serif;
  }

  button {
    font-family: "Nunito Sans", sans-serif;
  }
</style>
